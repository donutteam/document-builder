{
	"compilerOptions":
	{
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./lib",
		"rootDir": "./src",
		"strictNullChecks": true,
		"target": "ESNext"
	},
	"include": 
	[
		"./src/**/*.js",
		"./src/**/*.ts"
	]
}